script/source = "extends CharacterBody3D

@export var speed : float = 5.0
@export var jump_speed : float = 6.0
@export var gravity : float = 9.8
@export var mouse_sensitivity : float = 0.0025  # sensibilidad cómoda
var rotation_x : float = 0.0

func _ready():
	Input.set_mouse_mode(Input.MOUSE_MODE_CAPTURED)

func _unhandled_input(event):
	if event is InputEventMouseMotion:
		# Rotación horizontal del cuerpo
		rotate_y(-event.relative.x * mouse_sensitivity)
		
		# Rotación vertical de la cámara (limitada)
		rotation_x -= event.relative.y * mouse_sensitivity
		rotation_x = clamp(rotation_x, -1.5, 1.5)  # -1.5 a 1.5 radianes ≈ -85° a 85°
		$Camera3D.rotation.x = rotation_x

func _physics_process(delta):
	var input_dir = Vector3.ZERO

	# Movimiento con WASD
	if Input.is_action_pressed(\"move_forward\"):
		input_dir.z -= 1
	if Input.is_action_pressed(\"move_backward\"):
		input_dir.z += 1
	if Input.is_action_pressed(\"move_left\"):
		input_dir.x -= 1
	if Input.is_action_pressed(\"move_right\"):
		input_dir.x += 1

	input_dir = input_dir.normalized()

	# Dirección del movimiento basada en la orientación del cuerpo
	var direction = (transform.basis * input_dir)
	direction.y = 0
	direction = direction.normalized()

	velocity.x = direction.x * speed
	velocity.z = direction.z * speed

	# Gravedad
	if not is_on_floor():
		velocity.y -= gravity * delta
	else:
		# Salto
		if Input.is_action_just_pressed(\"jump\"):
			velocity.y = jump_speed

	move_and_slide()
"

